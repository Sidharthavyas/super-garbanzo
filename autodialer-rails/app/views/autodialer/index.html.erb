<!DOCTYPE html>
<html>
<head>
  <title>Autodialer System</title>
  <%= csrf_meta_tags %>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }
    .container { max-width: 1200px; margin: 0 auto; }
    .card {
      background: white;
      padding: 30px;
      border-radius: 15px;
      margin-bottom: 25px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }
    h1 {
      color: white;
      text-align: center;
      font-size: 42px;
      margin-bottom: 30px;
      text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    }
    h2 {
      color: #333;
      margin-bottom: 20px;
      font-size: 24px;
    }
    .stats {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 20px;
      margin-bottom: 30px;
    }
    .stat-card {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 25px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 5px 15px rgba(0,0,0,0.2);
    }
    .stat-card h3 { font-size: 48px; margin-bottom: 10px; }
    .stat-card p { font-size: 16px; opacity: 0.95; text-transform: uppercase; }
    .form-group { margin-bottom: 20px; }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: #333;
    }
    input[type="text"], textarea {
      width: 100%;
      padding: 12px 15px;
      border: 2px solid #e0e0e0;
      border-radius: 8px;
      font-size: 15px;
    }
    textarea { min-height: 120px; font-family: monospace; }
    button {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 14px 28px;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-size: 16px;
      font-weight: 600;
    }
    button:hover { transform: translateY(-2px); }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { padding: 15px; text-align: left; border-bottom: 1px solid #e0e0e0; }
    th { background: #f8f9fa; font-weight: 700; text-transform: uppercase; }
    .status-completed { color: #27ae60; font-weight: 600; }
    .status-failed { color: #e74c3c; font-weight: 600; }
    .flash {
      padding: 15px 20px;
      margin-bottom: 25px;
      border-radius: 8px;
      font-weight: 500;
    }
    .flash.success { background: #d4edda; color: #155724; }
    .flash.error { background: #f8d7da; color: #721c24; }
    .warning-box {
      background: #fff3cd;
      border-left: 4px solid #ff9800;
      padding: 15px;
      margin-bottom: 20px;
      border-radius: 4px;
      color: #856404;
    }
  </style>
</head>
<body>
  <div class="container">
    <% if flash[:success] %>
      <div class="flash success">‚úÖ <%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="flash error">‚ùå <%= flash[:error] %></div>
    <% end %>

    <h1>üìû Autodialer System</h1>
    
    <div class="stats">
      <div class="stat-card">
        <h3><%= @stats[:total] %></h3>
        <p>Total Calls</p>
      </div>
      <div class="stat-card">
        <h3><%= @stats[:successful] %></h3>
        <p>Successful</p>
      </div>
      <div class="stat-card">
        <h3><%= @stats[:failed] %></h3>
        <p>Failed</p>
      </div>
      <div class="stat-card">
        <h3><%= @stats[:average_duration] %>s</h3>
        <p>Avg Duration</p>
      </div>
    </div>

    <div class="card">
      <h2>ü§ñ AI Voice Command</h2>
      <%= form_with url: autodialer_ai_command_path, method: :post do |f| %>
        <div class="form-group">
          <%= f.text_field :command, placeholder: "e.g., Call +918001234567", required: true %>
        </div>
        <%= f.button "üöÄ Execute AI Command", type: :submit %>
      <% end %>
    </div>

    <div class="card">
      <h2>üì± Single Call</h2>
      <div class="warning-box">
        ‚ö†Ô∏è Use only 1800-XXX-XXXX toll-free numbers!
      </div>
      <%= form_with url: autodialer_create_path, method: :post do |f| %>
        <div class="form-group">
          <label>Phone Number</label>
          <%= f.text_field :phone_number, placeholder: "+918001234567", required: true %>
        </div>
        <div class="form-group">
          <label>Custom Message (Optional)</label>
          <%= f.text_field :ai_message, placeholder: "Enter custom message" %>
        </div>
        <%= f.button "üìû Make Call", type: :submit %>
      <% end %>
    </div>

    <div class="card">
      <h2>üìã Bulk Upload</h2>
      <%= form_with url: autodialer_bulk_upload_path, method: :post do |f| %>
        <div class="form-group">
          <label>Phone Numbers (one per line)</label>
          <%= f.text_area :phone_numbers, placeholder: "+918001234567\n+918001234568", required: true %>
        </div>
        <div class="form-group">
          <label>Custom Message (Optional)</label>
          <%= f.text_field :ai_message %>
        </div>
        <%= f.button "üìû Start Bulk Calling", type: :submit %>
      <% end %>
    </div>

    <div class="card">
      <h2>üìä Call Logs</h2>
      <% if @call_logs.any? %>
        <table>
          <thead>
            <tr>
              <th>Phone Number</th>
              <th>Status</th>
              <th>Duration</th>
              <th>Time</th>
            </tr>
          </thead>
          <tbody>
            <% @call_logs.each do |log| %>
              <tr>
                <td><%= log.phone_number %></td>
                <td class="status-<%= log.status %>"><%= log.status %></td>
                <td><%= log.duration ? "#{log.duration}s" : "-" %></td>
                <td><%= log.created_at.strftime("%b %d, %I:%M %p") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p style="text-align: center; color: #999; padding: 40px;">No calls yet</p>
      <% end %>
    </div>
  </div>
</body>
</html>